<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/Past_Patients_Room"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:text="From:"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/Next_Room"
        app:layout_constraintEnd_toStartOf="@+id/Accept_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/Past_Next_Room"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginTop="24dp"
        android:text="To:"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Past_Patients_Room"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Past_Doctor"
        android:layout_width="wrap_content"
        android:layout_height="26dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="9dp"
        android:text="Doctor"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Past_Next_Room"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/Past_Date"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:text="Date"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Past_Doctor"
        app:layout_constraintTop_toBottomOf="@+id/Past_Next_Room"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/Past_Request_ID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:text="ID: "
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/Past_Next_Room"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
